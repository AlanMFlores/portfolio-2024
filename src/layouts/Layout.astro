---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
		<link rel="icon" type="image/svg+xml" href="/public/alanmflores-icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
	<script src="https://kit.fontawesome.com/e6d83a41ae.js" crossorigin="anonymous"></script>
</html>
<style is:global>
	:root {
		/* Light Mode Scheme */
		--accent: #4FBDBA;
		--accent-dark: #429C9A;
		--light-background: #FAFAFA;
		--light-gray: #D9D9D9;
		--title: #1E1E1E;
		--copy: #464444;
		--description: #757575;

		/* Dark Mode Scheme */
	}

	a {
		text-decoration: none;
	}

	html {
		font-family: "Inter", sans-serif;
		background: var(--light-background);
	}

	body {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	*, *::before, *::after {
		box-sizing: border-box;
	}

	h1 {
		font-size: 2rem;
		color: var(--title);
		margin: 0;
	}

	h2 {
		font-size: 1.5rem;
		color: var(--title);
		margin: 0;
	}

	h3 {
		color: var(--title);
		margin: 0;
	}

	p {
		font-size: 1rem;
		color: var(--copy);
		margin: 0;
	}

	a {
		color: var(--accent);
		transition: 300ms;
	}

	a:hover {
		color: var(--accent-dark)
	}

	@media print {
		.no-print {
			display: none !important;
		}
	}

	.print {
		display: none !important;
	}

	@media print {
		.print {
			display: block !important;
		}
	}

	
</style>
